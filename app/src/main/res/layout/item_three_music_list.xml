<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimen_4dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_main_1"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_120dp"
                android:id="@+id/iv_picture_1"
                android:src ="@drawable/img_one_bi_one"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:lines="2"
                android:id="@+id/tv_name_1"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:textSize="@dimen/dimen_12sp"
                android:text="@string/no_recommond"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_2dp"
        android:layout_marginRight="@dimen/dimen_2dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_main_2"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_120dp"
                android:id="@+id/iv_picture_2"
                android:src ="@drawable/img_one_bi_one"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:lines="2"
                android:id="@+id/tv_name_2"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:textSize="@dimen/dimen_12sp"
                android:text="@string/no_recommond"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_main_3"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="@dimen/dimen_120dp"
                android:id="@+id/iv_picture_3"
                android:layout_height="@dimen/dimen_120dp"
                android:src ="@drawable/img_one_bi_one"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:lines="2"
                android:id="@+id/tv_name_3"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:textSize="@dimen/dimen_12sp"
                android:text="@string/no_recommond"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>