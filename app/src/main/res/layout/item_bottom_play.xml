<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@color/white"
        android:id="@+id/rl_bottom_main_play">

        <ImageView
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:src="@drawable/img_one_bi_one"
            android:scaleType="fitXY"
            android:id="@+id/iv_bottom_music_picture"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:src="@drawable/playbar_btn_playlist"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_bottom_music_list"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:src="@drawable/playbar_btn_play"
            android:layout_toLeftOf="@id/iv_bottom_music_list"
            android:id="@+id/iv_bottom_music_play"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16sp"
            android:layout_toRightOf="@id/iv_bottom_music_picture"
            android:layout_toLeftOf="@id/iv_bottom_music_play"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textColor="@color/text_color_main"
            android:id="@+id/tv_bottom_music_name"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_12sp"
            android:text=""
            android:layout_below="@id/tv_bottom_music_name"
            android:layout_toRightOf="@id/iv_bottom_music_picture"
            android:layout_toLeftOf="@id/iv_bottom_music_play"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:id="@+id/tv_bottom_music_des"
            android:textColor="@color/text_color_4"/>

    </RelativeLayout>

</RelativeLayout>